             StartupUri="Views/MainView.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <SolidColorBrush x:Key="AccentColorBrush" Color="Orange" />
            <SolidColorBrush x:Key="AccentColorBrush4" Color="Bisque" />
            
