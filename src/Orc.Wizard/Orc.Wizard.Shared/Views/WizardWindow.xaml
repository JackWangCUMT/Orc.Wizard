<catel:DataWindow x:Class="Orc.Wizard.Views.WizardWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:catel="http://catel.codeplex.com"
                  xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                  xmlns:wizard="clr-namespace:Orc.Wizard"
                  mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    
    <Grid Width="800" Height="400">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="{Binding PageHeader}"/>
        
        <ContentControl Grid.Row="1">
            <i:Interaction.Behaviors>
                <wizard:WizardPageSelectionBehavior Wizard="{Binding Wizard}"/>
            </i:Interaction.Behaviors>
        </ContentControl>

        <WrapPanel Grid.Row="2" Style="{StaticResource DataWindowButtonContainerStyle}">
            <Button Command="{Binding GoToPrevious}" Content="{catel:LanguageBinding Previous}" Style="{StaticResource DataWindowButtonStyle}" 
                    Visibility="{Binding IsEnabled, RelativeSource={RelativeSource Self}, Converter={catel:BooleanToCollapsingVisibilityConverter}}" />

            <Button Command="{Binding GoToNext}" Content="{catel:LanguageBinding Next}" Style="{StaticResource DataWindowButtonStyle}" />

            <Button Command="{Binding Finish}" Content="{catel:LanguageBinding Finish}" Style="{StaticResource DataWindowButtonStyle}" />

            <Button Command="{Binding Cancel}" Content="{catel:LanguageBinding Cancel}" Style="{StaticResource DataWindowButtonStyle}" />
        </WrapPanel>
    </Grid>
    
</catel:DataWindow>
